<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-center">
      <div class="h-12 w-12 rounded-full bg-blue-100 flex items-center justify-center">
        <span class="text-xl font-medium text-blue-600"><%= @theme.title[0].upcase %></span>
      </div>
      <h1 class="ml-4 text-2xl font-bold text-gray-900"><%= @theme.title %></h1>
    </div>
  </div>

  <div class="px-6 py-4">
    <div class="space-y-6">
      <% if @theme.description.present? %>
        <div>
          <h2 class="text-lg font-medium text-gray-900 mb-2">Description</h2>
          <p class="text-gray-700"><%= @theme.description %></p>
        </div>
      <% end %>

      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-2">Creation Date</h2>
        <p class="text-gray-700"><%= @theme.creation_date %></p>
      </div>

      <% if @theme.nominations.winners.any? %>
        <div>
          <h2 class="text-lg font-medium text-gray-900 mb-2">Winning Games</h2>
          <div class="space-y-3">
            <% @theme.nominations.winners.each do |nomination| %>
              <div class="flex items-center bg-gray-50 px-4 py-3 rounded-lg">
                <div class="flex-shrink-0 h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                  <span class="text-sm font-medium text-blue-600">
                    <%= nomination.game.year %>
                  </span>
                </div>
                <%= link_to nomination.game, 
                    class: "ml-3 text-sm font-medium text-blue-600 hover:text-blue-900" do %>
                  <%= nomination.game.preferred_name %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
    <div class="flex space-x-4">
      <%= link_to edit_theme_path(@theme), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>

      <%= link_to themes_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back
      <% end %>
    </div>
  </div>
</div>