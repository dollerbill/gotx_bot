<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header">
    <h1><%= most_recent_theme(@type).title %></h1>

    <%= link_to "GotM", previous_finishers_path(type: 'gotm'),class: 'btn btn-outline-secondary my-2 my-sm-0' %>
    <%= link_to "RetroBits", previous_finishers_path(type: 'retro'),class: 'btn btn-outline-secondary my-2 my-sm-0' %>
    <%= link_to "RPGotQ", previous_finishers_path(type: 'rpg'),class: 'btn btn-outline-secondary my-2 my-sm-0' %>
    <%= link_to "GotY", previous_finishers_path(type: 'goty'),class: 'btn btn-outline-secondary my-2 my-sm-0' %>
  </div>
  <br>
  <br>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">Finishers</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @users %>

  <div class="card-footer text-muted">
    <%= link_to 'Back', games_path %>
  </div>
</div>
