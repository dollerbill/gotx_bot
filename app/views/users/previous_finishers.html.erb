<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
    <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= most_recent_theme(@type).title %></h1>

    <div class="flex flex-wrap gap-2">
      <%= link_to 'GotM', previous_finishers_path(type: 'gotm'), class: "px-4 py-2 rounded-full text-sm font-medium #{@type == 'gotm' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition duration-150" %>
      
      <%= link_to 'RetroBits', previous_finishers_path(type: 'retro'), class: "px-4 py-2 rounded-full text-sm font-medium #{@type == 'retro' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition duration-150" %>
      
      <%= link_to 'RPGotQ', previous_finishers_path(type: 'rpg'), class: "px-4 py-2 rounded-full text-sm font-medium #{@type == 'rpg' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition duration-150" %>
      
      <%= link_to 'GotY', previous_finishers_path(type: 'goty'), class: "px-4 py-2 rounded-full text-sm font-medium #{@type == 'goty' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition duration-150" %>
    </div>
  </div>

  <div class="px-6 py-4">
    <h2 class="text-lg font-medium text-gray-700 mb-4">Finishers</h2>
    <div class="bg-white rounded-lg overflow-hidden">
      <ul class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <li class="hover:bg-gray-50 transition duration-150">
            <%= link_to user, class: 'block px-4 py-3' do %>
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
                  <%= user.name[0].upcase %>
                </div>
                <span class="ml-3 text-gray-700 hover:text-gray-900"><%= user.name %></span>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <%= render_pagination(@pagy) %>
  </div>

  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
    <%= link_to games_path, class: 'inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 transition duration-150' do %>
      <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Games
    <% end %>
  </div>
</div>