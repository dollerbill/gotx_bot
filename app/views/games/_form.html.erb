<%= form_with(model: game, class: "space-y-6") do |form| %>
  <% if game.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% game.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <fieldset class="space-y-4">
      <legend class="text-lg font-medium text-gray-900 mb-4">Game Titles</legend>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :title_usa, "USA Title", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title_usa, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :title_eu, "European Title", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title_eu, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :title_jp, "Japanese Title", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title_jp, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :title_world, "World Title", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title_world, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :title_other, "Alternate Title", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title_other, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>
      </div>
    </fieldset>

    <fieldset class="space-y-4">
      <legend class="text-lg font-medium text-gray-900 mb-4">Game Details</legend>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :year, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :year, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :system, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :system, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :developer, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :developer, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :genre, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :genre, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :time_to_beat, "Time to Beat (hours)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :time_to_beat, step: "0.1", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>

        <div>
          <%= form.label :screenscraper_id, "ScreenScraper.fr ID", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :screenscraper_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" %>
        </div>
      </div>
    </fieldset>
  </div>

  <div class="pt-5">
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>