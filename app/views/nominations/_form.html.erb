<%= form_with(model: nomination, class: "space-y-6") do |form| %>
  <% if nomination.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(nomination.errors.count, "error") %> prohibited this nomination from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% nomination.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :nomination_type, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :nomination_type,
            options_for_select([
              ['Game of the Month', 'gotm'],
              ['RetroBit', 'retro'],
              ['RPG', 'rpg'],
              ['Game of the Year', 'goty']
            ], nomination.nomination_type),
            {},
                        class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 sm:text-sm rounded-md" %>
      </div>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :description, rows: 4, class: "shadow-sm block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "Enter nomination description" %>
      </div>
    </div>

    <div>
      <%= form.label :winner, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :winner,
            options_for_select([
              ['Yes', true],
              ['No', false]
            ], nomination.winner),
            {},
            class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 sm:text-sm rounded-md" %>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <%= form.submit class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>