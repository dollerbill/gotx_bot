<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-medium text-gray-900">
        GotM Nominations
        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= @nominations.gotm.count %>
        </span>
      </h2>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Game</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Release Year</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Select Winner</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @nominations.gotm.each do |nomination| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-100 flex items-center justify-center">
                  <span class="text-sm font-medium text-gray-600">
                    <%= nomination.game.preferred_name[0].upcase %>
                  </span>
                </div>
                <%= link_to nomination,
                    class: "ml-4 text-sm font-medium text-gray-900 hover:text-blue-600" do %>
                  <%= nomination.game.preferred_name %>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= nomination.game.year %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= select_winner(nomination) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="px-6 py-4 bg-gray-50 border-t border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-medium text-gray-900">
        RPGotQ Nominations
        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= @nominations.rpg.count %>
        </span>
      </h2>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Game</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Select Winner</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @nominations.rpg.each do |nomination| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-100 flex items-center justify-center">
                  <span class="text-sm font-medium text-gray-600">
                    <%= nomination.game.preferred_name[0].upcase %>
                  </span>
                </div>
                <%= link_to nomination,
                    class: "ml-4 text-sm font-medium text-gray-900 hover:text-blue-600" do %>
                  <%= nomination.game.preferred_name %>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= select_winner(nomination) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @nominations.gotm.empty? && @nominations.rpg.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V7a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No current nominations</h3>
      <p class="mt-1 text-sm text-gray-500">
        There are no current nominations to select winners from.
      </p>
    </div>
  <% end %>

  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
    <div class="flex items-center justify-between">
      <%= link_to nominations_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Nominations
      <% end %>

      <div>
        <%= render_pagination(@pagy) %>
      </div>
    </div>
  </div>
</div>