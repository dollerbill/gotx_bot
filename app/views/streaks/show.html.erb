<p id="notice"><%= notice %></p>
<div class="card text-center">
  <div class="card-header">
    <h2><%= link_to @streak.user.name.humanize, @streak.user %></h2>
  </div>
  <div class="row">
    <div class="col"></div>
    <div class="col" style="text-align: left">
      <div class="card-body">
        <p><strong>Streak status: </strong><%= streak_status %></p>
        <p><strong>Streak started: </strong><%= "#{@streak.start_date.strftime("%B")}, #{@streak.start_date.year}" %></p>
        <p><strong>Last completion: </strong> <%= "#{@streak.last_incremented.strftime("%B")}, #{@streak.last_incremented.year}" %></p>
        <p><strong>Streak length: </strong> <%= "#{@streak.streak_count} #{"month".pluralize(@streak.streak_count)}" %></p>
      </div>
    </div>
    <div class="col"></div>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Back', streaks_path %>
  </div>
</div>
